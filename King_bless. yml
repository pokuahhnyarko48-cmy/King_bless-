#!/usr/bin/env python3

import os
import sys

def greet():
    name = input("Enter your name: ")
    print(f"Hello, {name}! Welcome to king_bless.")

def calculator():
    try:
        expr = input("Enter expression (e.g. 3 + 4 * 2): ")
        print("Result:", eval(expr))
    except Exception as e:
        print("Error:", e)

def show_calendar():
    os.system("cal")

def exit_tool():
    print("Goodbye!")
    sys.exit(0)

def menu():
    while True:
        print("\n--- king_bless Multi-Tool ---")
        print("1. Greet Me")
        print("2. Calculator")
        print("3. Show Calendar")
        print("4. Exit")
        choice = input("Select an option (1-4): ")
        if choice == "1":
            greet()
        elif choice == "2":
            calculator()
        elif choice == "3":
            show_calendar()
        elif choice == "4":
            exit_tool()
        else:
            print("Invalid option. Try again.")

if __name__ == "__main__":
    menu()
